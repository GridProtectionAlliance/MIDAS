                    if (result) {
                        hideErrorMessage();

                        if (result.startsWith("<")) {
                            if (self.dataHubIsConnected()) {
                                // User selected an XML-based configuration to import, convert to JSON
                                dataHub.getXmlAsJson(result, false).done(function (convertResult) {
                                    self.loadImportedAnalyzerConfig(configID, convertResult);
                                })
                                .fail(function (error) {
                                    showErrorMessage(`Failed to import config file: Convert XML to JSON ${error}`, null, true);
                                });
                            }
                            else {
                                showErrorMessage("Failed to import config file: cannot convert XML config to JSON at this time, hub is not connected", null, true);
                            }
                        }
                        else if (result.startsWith("{")) {
                            self.loadImportedAnalyzerConfig(configID, result);
                        }
                        else {
                            showErrorMessage("Unexpected config file format: source file should start with \"{\" character for JSON or \"<\" character for XML", null, true);
                        }
                    }
                    else {
                        showErrorMessage("Failed to import config file: no data read from selected file", null, true);
                    }
                };

                reader.onloadend = function () {
                    if (reader.error && reader.error.message)
